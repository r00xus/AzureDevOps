@{
    ViewData["Title"] = "Отчеты";
}

<div region="west" title="Параметры" split="true" collapsible="false" style="width:300px; padding:10px;">

    <div class="easyui-layout" fit="true">
        <div region="north" border="false">
            <label style="display:block; margin-bottom:10px;">Период</label>
            <div style="display:inline-block; width:50%;">
                <input id="dboxDateFrom" class="easyui-datebox" prompt="c" style="width:100%;" />
            </div><div style="display:inline-block; width:50%; padding-left:10px;">
                <input id="dboxDateTo" class="easyui-datebox" prompt="по" style="width:100%;" />
            </div>
        </div>
        <div region="center" border="false" style="padding-top:10px;">
            <table id="dtgridEmployees" fit="true" cssCls="lines-no"></table>
        </div>
    </div>
</div>

<div id="panelReports" region="center" title="Отчеты по сотрудникам">
    <div class="easyui-layout" fit="true" border="false">
        <div region="north" class="datagrid-toolbar" height="auto" style="padding:5px;">
            <a id="btnRefresh" href="#" class="easyui-linkbutton" plain="true">Обновить</a>
            <a id="btnExcel" href="#" class="easyui-linkbutton" plain="true">Excel</a>
            <span class="separator"></span>
            <a id="btnSettings" href="#" class="easyui-linkbutton" plain="true">Настройки</a>
        </div>
        <div region="center" border="false">
            <div class="easyui-tabs" fit="true">
                <div title="Активности" style="padding:10px;">
                    <table id="dtgridActivity" fit="true"></table>
                </div>
                <div title="Расхождения с графиком" style="padding:10px;">
                    <table id="dtgridDiff" fit="true"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="panelSettings" title="Настройки" style="width:50%;height:70%;">
    @Html.Partial("~/Views/Settings/_panelSettings.cshtml")
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $('body').panelMain();
    });

</script>
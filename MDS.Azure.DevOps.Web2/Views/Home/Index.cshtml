@{
    ViewData["Title"] = "Отчеты";
}

<div region="west" title="Параметры" split="true" collapsible="false" style="width:400px; padding:10px;">
    <label style="display:block; margin-bottom:10px;">Период</label>
    <div style="display:inline-block; width:50%;">
        <input id="dboxDateFrom" class="easyui-datebox" prompt="c" style="width:100%;" />
    </div><div style="display:inline-block; width:50%; padding-left:10px;">
        <input id="dboxDateTo" class="easyui-datebox" prompt="по" style="width:100%;" />
    </div>
    <div style="margin-top:15px;">
        <label style="display:block; margin-bottom:10px;">Сотрудники</label>
        <ul id="dlistEmployees" style="width:100%; height:226px;"></ul>
    </div>
</div>

<div id="panelReports" region="center" title="Отчеты по сотрудникам" border="false">
    <div class="easyui-layout" fit="true" border="false">
        <div region="north" class="datagrid-toolbar" height="auto" style="padding:5px;">
            <a id="btnRefresh" href="#" class="easyui-linkbutton" plain="true">Обновить</a>
            <span class="separator"></span>
            <a id="btnSettings" href="#" class="easyui-linkbutton" plain="true">Настройки</a>
        </div>
        <div region="center" border="false">
            <div class="easyui-tabs" fit="true" tabPosition="bottom">
                <div title="Активности">
                    <table id="dtgridActivity" fit="true" border="false"></table>
                </div>
                <div title="Расхождения с графиком">
                    <table id="dtgridDiff" fit="true" border="false"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="panelSettings" title="Настройки" style="width:50%;height:70%;">
    @Html.Partial("~/Views/Settings/_panelSettings.cshtml")
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $('body').panelMain();
    });

</script>